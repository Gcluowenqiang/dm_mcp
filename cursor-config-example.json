{
  "mcpServers": {
    "dm-mcp": {
      "command": "python",
      "args": ["/path/to/dm-mcp/main.py"],
      "env": {
        "DAMENG_HOST": "your_dm_server_host",
        "DAMENG_PORT": "5236",
        "DAMENG_USERNAME": "your_username",
        "DAMENG_PASSWORD": "your_password",
        "DAMENG_DATABASE": "DAMENG",
        "DAMENG_SECURITY_MODE": "readonly",
        "DAMENG_ALLOWED_SCHEMAS": "*",
        "DAMENG_CONNECT_TIMEOUT": "30",
        "DAMENG_QUERY_TIMEOUT": "60",
        "DAMENG_MAX_RETRIES": "3",
        "DAMENG_ENABLE_QUERY_LOG": "false",
        "DAMENG_MAX_RESULT_ROWS": "1000"
      }
    }
  }
} 